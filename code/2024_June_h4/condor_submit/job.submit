# Specify the executable (your script or program)

Initialdir = /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4

# Executable = /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/condor_submit/run_code.sh
Executable = /bin/bash

# Arguments = $(run_number) $(pool_number)
Arguments = run_code.sh $(run_number) $(pool_number)

Transfer_Input_Files = /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/condor_submit/run_code.sh, \
 /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/MyFunctions_2023_June.C,  \
 /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/MyFunctions_2023_June.h, \
 /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/AnalyseTreePicosec_2023_June.C, \
 /afs/cern.ch/user/a/akallits/PicoAnalysis/cpp_analysis/code/2023_June_h4/RMSBaselineCalculator_2023_June.cpp


should_transfer_files = YES
when_to_transfer_output = ON_EXIT

# Define the log, output, and error files
Log = condor_submit/log/job_run.log
Output = condor_submit/out/job_run$(run_number)_pool$(pool_number).out
Error = condor_submit/err/job_run$(run_number)_pool$(pool_number).err

+MaxRuntime = $(max_run_time)

# Request resources
RequestCpus = 1
RequestMemory = 2GB

# Specify the job queue
Queue run_number, pool_number, max_run_time from processedTrees_run_list.txt
